<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="70dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_logo"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_logo"
        android:maxLength="20"
        android:maxLines="1"
        android:text="优酷"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_pkg_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_label"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_logo"
        android:maxLength="20"
        android:maxLines="1"
        android:text="包名：com.eworld.study"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pkg_str"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_logo"
        android:maxLength="20"
        android:maxLines="1"
        android:text="版本1.1.2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pkg_str"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_version"
        android:maxLength="20"
        android:maxLines="1"
        android:text="大小：10M"
        android:textSize="12sp" />
</RelativeLayout>